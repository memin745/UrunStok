@model UrunStok.Models.Entity.TBL_MUSTERİ
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Musteri Ad</label>
        @Html.TextBoxFor(m => m.MUSTERİAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERİAD, "", new { @style = "color:green" })
    </div>
    <div>
        <label>Musteri SoyAd</label>
        <input type="text" class="form-control" name="MUSTERİSOYAD" />
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Musteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Müşteri Ekleme İşi Başarı İle Tamamlandı.');
        });
    </script>

</form>

